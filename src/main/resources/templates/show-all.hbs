{{#partial "content"}}
    <h1>Teams:</h1>
    {{#if teams}}
        {{#each teams}}
            <h3>{{name}}</h3>
            <p>{{description}}</p>
            <p>Team members: {{members}}</p>
            <p><a href="teams/{{this.id}}/update">update info</a> </p>

        {{/each}}
    {{else}}
        <p>No teams!</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}